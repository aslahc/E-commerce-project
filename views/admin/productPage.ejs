<%- include('../layouts/adminHead.ejs') -%>

    <body>
        <div class="screen-overlay"></div>
        <aside class="navbar-aside" id="offcanvas_aside" style="background-color:rgb(255, 250, 250);">

            <%- include('../layouts/adminNavbar.ejs') -%>
        </aside>
        <main class="main-wrap">
            <%- include('../layouts/adminHeaderBar.ejs') -%>
                <section class="content-main">
                    <div class="row">
                        <form action="/admin/addProducts" method="POST" enctype="multipart/form-data" class="row g-3"
                            onsubmit="return validate()">

                            <div class="col-12">
                                <div class="content-header">
                                    <h2 class="content-title">Add New Product</h2>
                                    <div>

                                        <button type="submit"
                                            class="btn btn-md rounded font-sm hover-up">Publish</button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label for="product_title" class="form-label">Product title</label>
                                            <input type="text" name="productName" placeholder="Type here"
                                                class="form-control" id="product_title">
                                            <p class="text-danger" id="nameError"></p>
                                        </div>
                                        <div class="row gx-3">
                                            <div class="col-md-4 mb-3">
                                                <label for="product_sku" class="form-label">Regular Price</label>
                                                <input type="text" name="productRegPrice" placeholder="Type here"
                                                    class="form-control" id="product_regPrice">
                                                <p class="text-danger" id="regPriceError"></p>

                                            </div>
                                            <!-- <div class="col-md-4 mb-3">
                                        <label for="product_color" class="form-label">Sale Price</label>
                                        <input type="text" name="productSalePrice" placeholder="Type here" class="form-control" id="product_salePrice">
                                        <p class="text-danger" id="salePriceError"></p>
                                    </div> -->
                                            <div class="col-md-4 mb-3">
                                                <label for="product_size" class="form-label">Size</label>
                                                <input type="text" name="productSize" placeholder="Type here"
                                                    class="form-control" id="product_size">
                                                <p class="text-danger" id="sizeError"></p>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="product_brand" class="form-label">Brand</label>
                                            <input type="text" name="productBrand" placeholder="Type here"
                                                class="form-control" id="product_brand">
                                            <p class="text-danger" id="brandError"></p>
                                        </div>
                                    </div>
                                </div> <!-- card end// -->
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <div>
                                            <label class="form-label">Description</label>
                                            <textarea placeholder="Type here" class="form-control"
                                                name="productDescription" id="prod_description" rows="4"></textarea>
                                            <p class="text-danger" id="descError"></p>
                                        </div>
                                    </div>
                                </div> <!-- card end// -->
                                <div class="card mb-4">

                                    <div class="card-body">
                                        <div>
                                            <label class="form-label">Images</label>
                                            <input class="form-control" type="file" name="image" id="imageInput"
                                                multiple>
                                        </div>
                                        <p id="imgError"></p>
                                        <!-- Container to display added images -->
                                        <div id="addedImagesContainer" class="mt-3"></div>
                                    </div>

                                </div><!-- card end// -->
                            </div>

                            <div class="col-lg-4">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label">Stock</label>
                                            <input type="text" placeholder="Type here" name="productStock"
                                                id="prod_stock" class="form-control">
                                            <p class="text-danger" id="sotckError"></p>
                                        </div>
                                        <!-- <div class="mb-3">
                                    <label class="form-label">Status</label>
                                    <select class="form-select">
                                        <option>Published</option>
                                        <option>Draft</option>
                                    </select>
                                </div> -->
                                        <div class="mb-3">
                                            <div class="mb-4">
                                                <label class="form-label">category</label>
                                                <% for(let i=0;i<category.length;i++){%>


                                                    <label class="mb-2 form-check form-check-inline"
                                                        style="width: 45%;">
                                                        <input class="form-check-input" checked="" name="proCategory"
                                                            value="<%= category[i]._id %>" type="radio" required>
                                                        <span class="form-check-label">
                                                            <%= category[i].catName %>
                                                        </span>
                                                    </label>
                                                    <% } %>

                                            </div>
                                        </div>
                                        <!-- ... (unchanged) ... -->
                                    </div>
                                </div> <!-- card end// -->
                            </div>
                        </form>
                    </div>
                </section>
                <footer class="main-footer font-xs">
                    <div class="row pb-30 pt-15">
                        <div class="col-sm-6">
                            <script>
                                document.write(new Date().getFullYear())
                            </script> Â©, Evara - HTML Ecommerce Template .
                        </div>
                        <div class="col-sm-6">
                            <div class="text-sm-end">
                                All rights reserved
                            </div>
                        </div>
                    </div>
                </footer>
        </main>
        <style>
            .thumbnail {
                display: inline-block;
                margin-right: 10px;
            }

            .thumbnail img {
                width: 50px;
                /* Adjust the width as needed */
                height: auto;
                display: block;
            }

            .remove-icon {
                cursor: pointer;
                color: red;
                font-weight: bold;
                font-size: 14px;
            }
        </style>
        <script src="/admin-assets/js/addproductImg.js"></script>

        <!-- <script src="https://cdn.jsdelivr.net/npm/cropperjs@1.5.12/dist/cropper.min.js"></script> -->

        <script src="/admin-assets/js/productValidation.js"></script>

        <script src="/admin-assets/js/productValidation.js"> </script>
        <script src="/admin-assets/js/vendors/jquery-3.6.0.min.js"></script>
        <script src="/admin-assets/js/vendors/bootstrap.bundle.min.js"></script>
        <script src="/admin-assets/js/vendors/select2.min.js"></script>
        <script src="/admin-assets/js/vendors/perfect-scrollbar.js"></script>
        <script src="/admin-assets/js/vendors/jquery.fullscreen.min.js"></script>
        <!-- Main Script -->
        <script src="/admin-assets/js/main.js" type="text/javascript"></script>


        <%- include('../layouts/adminFooter.ejs') -%>