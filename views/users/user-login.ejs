<%- include('../layouts/head.ejs') -%>
    <%- include('../layouts/userNav.ejs') -%>

        <body>
            <div class="container">
                <div class="row justify-content-center align-items-center">
                    <div class="col-lg-5 mt-5">
                        <div class="card login-card mb-5" style="border-radius: 10px;">
                            <div class="card-body p-3 ">
                                <div class="text-center mb-4">
                                    <h3 class="mb-4">Login</h3>
                                </div>
                                <form method="post" action="/login">
                                    <!-- Modify the email input -->
                                    <div class="form-group">
                                        <input type="text" name="email" placeholder="Your Email"
                                            class="form-control <%= typeof message !== 'undefined' && message.includes('email') ? 'is-invalid' : '' %>"
                                            id="emailInput">
                                        <% if (typeof message !=='undefined' && message.includes('Email')) { %>
                                            <p style="color: rgb(255, 0, 0)">
                                                <%= message %>
                                            </p>
                                            <% } %>


                                    </div>

                                    <!-- Modify the password input with show/hide feature -->
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="password" name="password" placeholder="Password"
                                                class="form-control <%= typeof message !== 'undefined' && message.includes('password') ? 'is-invalid' : '' %>"
                                                id="passwordInput">
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <i class="fa fa-eye" id="togglePassword"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <% if (typeof message !=='undefined' && message.includes('Password')) { %>
                                            <p style="color: rgb(255, 0, 0)">
                                                <%= message %>
                                            </p>
                                            <% } %>

                                    </div>

                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="exampleCheckbox1"
                                                name="checkbox">
                                            <label class="custom-control-label" for="exampleCheckbox1">Remember
                                                me</label>
                                        </div>
                                    </div>

                                    <div class="form-group text-center">
                                        <a class="text-muted" href="/forgetPasswordEmail">Forgot password?</a>
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block">Log in</button>
                                    </div>
                                    <% if (typeof message !=='undefined' && message.includes('blocked')) { %>
                                        <div class="alert alert-danger" role="alert">
                                            Your account is blocked. Please contact the administrator for assistance.
                                        </div>
                                        <% } %>
                                </form>


                                <p>Don't have an account yet? <a href="/register" class="text-success">signUp</a></p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include("../layouts/userFooter.ejs") -%>

                <!-- Bootstrap JS -->
                <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
                <!-- Script for show/hide password -->
                <script src="/assets/js/user-login.js"></script>
                <!-- Template JS -->
                <script src="assets/js/maind134.js?v=3.4"></script>
        </body>

        </html>