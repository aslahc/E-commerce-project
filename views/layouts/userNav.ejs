        console.log("entering");
        const searchInputValue = document.getElementById("searchInput").value;
        const selectedCategoryValue = document.getElementById("categorySelect").value;
        console.log(searchInputValue);
        console.log(selectedCategoryValue);
        // Using fetch to send the search query to the server
        // fetch(
        //     `/search?search=${encodeURIComponent(searchInputValue)}&category=${encodeURIComponent(selectedCategoryValue)}`
        // )
        //     .then((response) => response.text())
        //     .then((data) => {
        //         // Handle the response data as needed
        //     })
        //     .catch((error) => console.error("Error:", error));
        window.location.href = `search?search=${encodeURIComponent(searchInputValue)}&category=${encodeURIComponent(selectedCategoryValue)}`
    }
</script>